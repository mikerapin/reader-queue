{
    "name": "comiXology Web Reader Queue",
    "version": "1.0",
    "manifest_version": 2,
    "description": "Allows you to queue items from your library for reading in an order you want.",
    "permissions": [
        "storage"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_title": "Allows you to queue items from your library for reading in an order you want."
    },
    "content_scripts": [
        {
            "matches": [
                "*://www.comixology.com/my-books/*"
            ],
            "js": [
                "background.js"
            ],
            "css": [
                "queue.css"
            ]
        },
        {
            "matches": [
                "*://www.comixology.com/comic-reader/*"
            ],
            "js": [
                "appender.js"
            ],
            "css": [
                "appender.css"
            ]
        }
    ]
}